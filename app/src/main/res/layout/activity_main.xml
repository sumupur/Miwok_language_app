<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/number"
        android:textSize="20sp"
        android:text="@string/number"
        android:background="#FD8E09"
        android:onClick="number"
        android:paddingTop="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/family"
        android:textSize="20sp"
        android:text="@string/family"
        android:background="#379237"
        android:onClick="family"
        android:paddingTop="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/color"
        android:textSize="20sp"
        android:text="@string/colors"
        android:background="#8800A0"
        android:onClick="colors"
        android:paddingTop="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/phrases"
        android:textSize="20sp"
        android:text="@string/phrases"
        android:background="#16AFCA"
        android:onClick="Phrases"
        android:paddingTop="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp" />



</LinearLayout>